<div class="container">
  <h3>Inscrivez-Vous</h3>
  <form action='/signup' method='POST'>

   <div class="form-group">
     <label>Username : </label>
      <input type="text" class="form-control col-5" placeholder="username" name="username">
    </div>
  
        <div class="form-group">
     <label>firstName : </label>
      <input type="text" class="form-control col-5" placeholder="firstName" name="firstName">
    </div>

    <div class="form-group">
     <label>surname : </label>
      <input type="text" class="form-control col-5" placeholder="surname" name="surname">
    </div>

    

     <div class="form-group">
     <label>Email: </label>
      <input type="email" class="form-control col-5" placeholder="Enter email" name="email">
    </div>

     <div class="form-group">
      <label>Password: </label>
      <input type="password" class="form-control col-5" placeholder="Password" name="password"/>
    </div>



     <div class="form-group">
     <label>confirm password: </label>
      <input type="password" class="form-control col-5" placeholder="confirmPassword" name="confirmPassword">
    </div>

    <div class="form-group">
     <label>Anniversaire: </label>
      <input type="date" class="form-control col-5" placeholder="Date" name="date">
    </div>
    

    <button type="submit" class="btn btn-default btn-warning">Submit</button>
  </form>
</div>